<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if (!user || !user.email) { %>
      <div class="row">
        <div class="col-md-6">
          <a class="btn btn-default" href="/registration" role="button">
            Register
          </a>
        </div>
        <div class="col-md-6">
          <a class="btn btn-default" href="/login" role="button">Login</a>
        </div>
      </div>
      
    <% } else { %>
      <div class="row">
        <div class="col-md-8">
          Logged in as: <%= user.email %>
        </div>
        <div class="col-md-4">
          <form action="/logout" method="POST">
            <button style="margin: 1em;" type="submit" type="button" class="btn btn-default">
              Logout
            </button>
          </form>
        </div>
      </div>
    <% } %>     
        
  </nav>
</header>